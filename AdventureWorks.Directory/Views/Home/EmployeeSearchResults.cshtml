@using AdventureWorks.Directory.Models
@using System.Web.Helpers
@model IEnumerable<Employee>


  @{
    var grid = new WebGrid(Model, canPage: true, rowsPerPage: 15, selectionFieldName: "selectedRow",ajaxUpdateContainerId: "gridContent");
        grid.Pager(WebGridPagerModes.All);
        
   }

  <div id="gridContent">
      @if(Model != null && Model.Count() > 0)
        {
        @grid.GetHtml(tableStyle: "webGrid",
                headerStyle: "header",
                alternatingRowStyle: "alt",
                selectedRowStyle: "select",
                columns: grid.Columns(
                //grid.Column("Full_Name", "Name", format: item => item.Picture_URL.Length > 0 ? item.GetSelectLink(item.Full_Name) : item.Full_Name),
                grid.Column("Full_Name", "Name"),
                grid.Column("Extension", "Ext"),
                grid.Column("Phone_Number", "Phone"),
                grid.Column("Branch_Display_Name", "Location"),
                grid.Column("Dept_Display_Name", "Department"),
                grid.Column("Job_Title", "Job Title")),
                mode: WebGridPagerModes.All
         ) 
       @* @if (grid.HasSelection)
         {
            employee = (AdventureWorks.Directory.Models.Employee)grid.Rows[grid.SelectedIndex].Value;
            <span >
                <img style="border:medium"  src=@employee.Picture_URL />
            </span>
         } *@
        }
        else
        {
            <label style="font-weight:bold">No Data to Display</label>
      }
  </div> 


<script src="../../Scripts/jquery-2.0.3.min.js" type="text/javascript"></script>
    <style type="text/css">
        .webGrid { margin: 4px; border-collapse: collapse; width: 750px;  background-color:#FCFCFC;}
        .header { background-color: #aed7db; font-weight: bold; color: #FFF; }
        .webGrid th, .webGrid td { border: 1px solid #CCCCCC; padding: 5px; }
        /*.alt { background-color: #E4E9F5; color: #000; }*/
        .alt { background-color:#EFEFEF; color: #000; }
        .gridHead a:hover {text-decoration:underline;}
        .description { width:auto}
        .select{background-color: #C1D4E6}
    </style>
